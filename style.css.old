img {
    max-width: 100%;
}

.dropdown {
    position: relative;
    display: inline-block;
}

.dropdownItems {
    background: white;
    display: none;
    position: absolute;
    min-width: 160px;
    z-index: 1;
    border: 2px solid var(--link-color);
    border-radius: 5px;
}

.dropdownItems>a {
    display: block;
    width: 100%;
    color: black;
    padding: 12px 16px;
}

.dropdown:hover .dropdownItems {
    display: block;
}

.dropdownItems a:hover {
    color: rgb(50, 50, 50);
    background: rgb(235, 235, 235);
}

.slide {
    max-width: 500px;
    max-height: 300px;
}

.prev,
.next {
    cursor: pointer;
    position: absolute;
    top: 35%;
    width: auto;
    color: var(--accent-color);
    padding: .5em;
    font-weight: bold;
    font-size: 18px;
    animation: fade 1.5s ease;
    user-select: none;
}

.next {
    right: 25%;
}

.prev {
    right: 72%;
}